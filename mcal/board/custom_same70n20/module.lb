def init(module):
    module.name = ":board:custom_same70n20"
    module.description = "Custom board using same70n20"


def prepare(module, options):
    if not options[":target"].partname == "same70n20a-an":
        return False

    module.depends(":debug", ":platform:clockgen",
                   ":platform:gpio", ":platform:core", ":platform:usart:1")
    return True


def build(env):
    env.outbasepath = "mcal/src/mcal/board"
    env.copy("board.hpp")
    env.copy("board.cpp")

    # openocd file
    env.copy("board.cfg")

def init(module):
    module.name = ":test"
    module.description = "Tests for mcal"


def prepare(module, options):
    module.depends(":ext:catch2")
    # module.depends(":unittest")
    return True

def build(env):
    env.collect("modm:build:path.include", "mcal-test")
    core = env[":target"].get_driver("core")["type"]
    core = next((t for t in ("avr", "cortex-m") if core.startswith(t)), "hosted")
    env.outbasepath = "."
    env.copy("SConstruct")
    env.copy("runner/{}.cpp".format(core), "mcal-test/src/main.cpp")